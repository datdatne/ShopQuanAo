@model ShopQuanAo.Models.Category

@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4">Thêm Danh mục mới</h2>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Danh sách</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Thông tin danh mục
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên danh mục</label>
                            <input asp-for="Name" class="form-control" placeholder="Ví dụ: Áo khoác, Giày dép..." required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Lưu danh mục
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>