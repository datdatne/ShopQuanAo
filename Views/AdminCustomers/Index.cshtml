@model IEnumerable<ShopQuanAo.Models.Customer>
@{
    ViewData["Title"] = "Quản lý khách hàng"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Khách hàng</h1>

    <div class="mb-3"><a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus"></i> Thêm khách hàng</a></div>

    <div class="card mb-4">
        <div class="card-header"><i class="bi bi-people me-1"></i> Danh sách thành viên</div>
        <div class="card-body">
            <table class="table table-bordered table-hover align-middle">

                <thead class="table-dark text-center">
                    <tr>
                        <th style="width: 60px;">ID</th>
                        <th>Họ tên</th>
                        <th>Username</th>
                        <th>SĐT</th>
                        <th>Địa chỉ</th>
                        <th style="width: 150px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">#@item.Id</td>
                            <td>@item.FullName</td>
                            <td><span class="badge bg-info text-dark">@item.Username</span></td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Xem lịch sử">
                                        <i class="bi bi-clock-history"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Sửa thông tin">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>