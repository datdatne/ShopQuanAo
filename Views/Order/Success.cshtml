@model ShopQuanAo.Models.Order

@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="text-center mt-5">
    <div class="mb-4">
        <i class="bi bi-check-circle text-success" style="font-size: 80px;"></i>
    </div>

    <h1 class="text-success">Đặt hàng thành công!</h1>
    <p class="lead">Cảm ơn bạn đã đặt hàng tại Shop Quần Áo</p>

    <hr class="my-4" />

    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h5 class="card-title">Thông tin đơn hàng</h5>
            <hr />
            <dl class="row text-start">
                <dt class="col-sm-5">Mã đơn hàng:</dt>
                <dd class="col-sm-7"><strong class="text-primary">@Model.OrderCode</strong></dd>

                <dt class="col-sm-5">Ngày đặt:</dt>
                <dd class="col-sm-7">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-5">Tổng tiền:</dt>
                <dd class="col-sm-7"><strong class="text-danger">@Model.TotalAmount.ToString("N0") VNĐ</strong></dd>

                <dt class="col-sm-5">Trạng thái:</dt>
                <dd class="col-sm-7"><span class="badge bg-warning">@Model.Status</span></dd>
            </dl>

            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle"></i>
                Chúng tôi sẽ liên hệ với bạn sớm nhất để xác nhận đơn hàng!
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-2">
            <i class="bi bi-house"></i> Về trang chủ
        </a>
        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg">
            <i class="bi bi-bag"></i> Tiếp tục mua sắm
        </a>
    </div>
</div>