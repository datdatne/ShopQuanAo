@{
    ViewData["Title"] = "Xác nhận đặt hàng";
}

<h1>Xác nhận đặt hàng</h1>
<hr />

<form asp-action="Checkout" method="post">
    <div class="row">
        <!-- Thông tin khách hàng -->
        <div class="col-md-7">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person"></i> Thông tin người nhận</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Họ và tên:</dt>
                        <dd class="col-sm-8">@ViewBag.Customer.FullName</dd>

                        <dt class="col-sm-4">Số điện thoại:</dt>
                        <dd class="col-sm-8">@ViewBag.Customer.Phone</dd>

                        <dt class="col-sm-4">Địa chỉ:</dt>
                        <dd class="col-sm-8">@ViewBag.Customer.Address</dd>
                    </dl>
                </div>
            </div>

            <!-- Giỏ hàng -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-bag"></i> Sản phẩm đã chọn</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Giá</th>
                                <th>SL</th>
                                <th>Tổng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Cart)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ImageUrl" alt="@item.ProductName"
                                             style="width: 50px; height: 50px; object-fit: cover;"
                                             class="rounded me-2">
                                        @item.ProductName
                                    </td>
                                    <td>@item.Price.ToString("N0") VNĐ</td>
                                    <td>@item.Quantity</td>
                                    <td><strong>@((item.Price * item.Quantity).ToString("N0")) VNĐ</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Tổng tiền -->
        <div class="col-md-5">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> Chi tiết thanh toán</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <strong>@ViewBag.TotalAmount.ToString("N0") VNĐ</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <strong class="text-success">Miễn phí</strong>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between mb-3">
                        <h5>Tổng cộng:</h5>
                        <h5 class="text-danger">@ViewBag.TotalAmount.ToString("N0") VNĐ</h5>
                    </div>

                    <div class="alert alert-warning">
                        <small><i class="bi bi-info-circle"></i> Thanh toán khi nhận hàng (COD)</small>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-circle"></i> Xác nhận đặt hàng
                        </button>
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại giỏ hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>