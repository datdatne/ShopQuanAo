@model List<ShopQuanAo.Models.Product>

@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    /* Fix khoảng trắng */
    body {
        margin: 0 !important;
    }

    header {
        margin: 0 !important;
    }

    main {
        margin: 0 !important;
    }

    .container {
        margin-top: 0 !important;
    }
</style>

<!-- Hero banner bắt đầu từ đây... -->
<!-- HERO BANNER COMPACT -->
<div class="hero-banner-compact">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <h1 class="hero-title-compact" data-aos="fade-up">
                        Thời Trang Cao Cấp<br>
                        <span class="text-gradient">Phong Cách Hiện Đại</span>
                    </h1>
                    <p class="hero-subtitle-compact" data-aos="fade-up" data-aos-delay="100">
                        Khám phá bộ sưu tập mới nhất - Chất lượng đỉnh cao - Giá tốt nhất thị trường
                    </p>
                    <div class="hero-buttons-compact" data-aos="fade-up" data-aos-delay="200">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-hero-primary-compact me-2">
                            <i class="bi bi-shop me-2"></i> Mua sắm ngay
                        </a>
                        
                        @if (Context.Session.GetInt32("CustomerId") == null)
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-hero-outline-compact">
                                <i class="bi bi-person-circle me-2"></i> Đăng nhập
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Profile" class="btn btn-hero-outline-compact">
                                <i class="bi bi-person-check me-2"></i> Tài khoản
                            </a>
                        }
                    </div>

                    <!-- Trust Badges -->
                    <div class="trust-badges-compact mt-3" data-aos="fade-up" data-aos-delay="300">
                        <div class="badge-item-compact">
                            <i class="bi bi-shield-check"></i>
                            <span>Chính hãng 100%</span>
                        </div>
                        <div class="badge-item-compact">
                            <i class="bi bi-truck"></i>
                            <span>Giao hàng nhanh</span>
                        </div>
                        <div class="badge-item-compact">
                            <i class="bi bi-arrow-repeat"></i>
                            <span>Đổi trả 7 ngày</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CATEGORY SECTION WITH REAL IMAGES -->
<section class="category-section py-4">
    <div class="container">
        <div class="text-center mb-4" data-aos="fade-up">
            <h2 class="section-title-compact">Danh mục nổi bật</h2>
            <p class="section-subtitle-compact">Khám phá các bộ sưu tập được yêu thích nhất</p>
        </div>

        <div class="row g-3">
            <!-- MEN CATEGORY -->
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="100">
                <a asp-controller="Products" asp-action="Index" asp-route-categoryId="1" class="category-card-compact">
                    <div class="category-image-compact">
                        <img src="https://images.unsplash.com/photo-1490578474895-699cd4e2cf59?w=400&h=450&fit=crop" 
                             alt="Nam">
                        <div class="category-overlay-compact">
                            <h3 class="category-name-compact">Thời trang Nam</h3>
                            <p class="category-desc-compact">Phong cách lịch lãm</p>
                            <span class="category-btn-compact">Xem ngay <i class="bi bi-arrow-right ms-1"></i></span>
                        </div>
                    </div>
                </a>
            </div>

            <!-- WOMEN CATEGORY -->
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="200">
                <a asp-controller="Products" asp-action="Index" asp-route-categoryId="3" class="category-card-compact">
                    <div class="category-image-compact">
                        <img src="https://images.unsplash.com/photo-1483985988355-763728e1935b?w=400&h=450&fit=crop" 
                             alt="Nữ">
                        <div class="category-overlay-compact">
                            <h3 class="category-name-compact">Thời trang Nữ</h3>
                            <p class="category-desc-compact">Sang trọng quyến rũ</p>
                            <span class="category-btn-compact">Xem ngay <i class="bi bi-arrow-right ms-1"></i></span>
                        </div>
                    </div>
                </a>
            </div>

            <!-- PANTS CATEGORY -->
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="300">
                <a asp-controller="Products" asp-action="Index" asp-route-categoryId="2" class="category-card-compact">
                    <div class="category-image-compact">
                        <img src="https://images.unsplash.com/photo-1624378439575-d8705ad7ae80?w=400&h=450&fit=crop" 
                             alt="Quần">
                        <div class="category-overlay-compact">
                            <h3 class="category-name-compact">Quần</h3>
                            <p class="category-desc-compact">Năng động hiện đại</p>
                            <span class="category-btn-compact">Xem ngay <i class="bi bi-arrow-right ms-1"></i></span>
                        </div>
                    </div>
                </a>
            </div>

            <!-- ACCESSORIES CATEGORY -->
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="400">
                <a asp-controller="Products" asp-action="Index" asp-route-categoryId="4" class="category-card-compact">
                    <div class="category-image-compact">
                        <img src="https://images.unsplash.com/photo-1523779917675-b6ed3a42a561?w=400&h=450&fit=crop" 
                             alt="Phụ kiện">
                        <div class="category-overlay-compact">
                            <h3 class="category-name-compact">Phụ kiện</h3>
                            <p class="category-desc-compact">Hoàn thiện phong cách</p>
                            <span class="category-btn-compact">Xem ngay <i class="bi bi-arrow-right ms-1"></i></span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- FEATURED PRODUCTS SECTION -->
<section class="featured-products py-4 bg-light">
    <div class="container">
        <div class="text-center mb-4" data-aos="fade-up">
            <h2 class="section-title-compact">
                <i class="bi bi-stars me-2"></i> Sản phẩm nổi bật
            </h2>
            <p class="section-subtitle-compact">Những sản phẩm mới nhất và được yêu thích nhất</p>
        </div>

        <div class="row g-3">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="@(Model.IndexOf(product) * 100)">
                    <div class="product-card-compact">
                        @if (product.Stock < 10 && product.Stock > 0)
                        {
                            <span class="product-badge-compact badge-warning">
                                <i class="bi bi-fire me-1"></i> Sắp hết
                            </span>
                        }
                        else if (product.Stock > 50)
                        {
                            <span class="product-badge-compact badge-hot">
                                <i class="bi bi-lightning-fill me-1"></i> Hot
                            </span>
                        }
                        
                        <div class="product-image-wrapper-compact">
                            <img src="@product.ImageUrl" class="product-image-compact" alt="@product.Name">
                            <div class="product-overlay-compact">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" 
                                   class="btn btn-view-product-compact">
                                    <i class="bi bi-eye me-1"></i> Xem chi tiết
                                </a>
                            </div>
                        </div>
                        
                        <div class="product-info-compact">
                            <span class="product-category-compact">@product.Category.Name</span>
                            <h5 class="product-name-compact">@product.Name</h5>
                            
                            <div class="product-price-row-compact">
                                <span class="product-price-compact">@product.Price.ToString("N0") đ</span>
                                @if (product.Stock > 0)
                                {
                                    <span class="product-stock-compact">
                                        <i class="bi bi-check-circle text-success"></i> Còn hàng
                                    </span>
                                }
                                else
                                {
                                    <span class="product-stock-compact text-danger">
                                        <i class="bi bi-x-circle"></i> Hết hàng
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4" data-aos="fade-up">
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary px-4">
                <i class="bi bi-grid me-2"></i> Xem tất cả sản phẩm
            </a>
        </div>
    </div>
</section>

<!-- WHY CHOOSE US SECTION -->
<section class="why-choose-us-compact py-4">
    <div class="container">
        <div class="text-center mb-4" data-aos="fade-up">
            <h2 class="section-title-compact">Tại sao chọn chúng tôi?</h2>
            <p class="section-subtitle-compact">Cam kết mang đến trải nghiệm mua sắm tốt nhất</p>
        </div>

        <div class="row g-3">
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-box-compact">
                    <div class="feature-icon-compact bg-primary">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h6 class="feature-title-compact">Giao hàng nhanh</h6>
                    <p class="feature-desc-compact">Giao hàng toàn quốc trong 2-3 ngày</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-box-compact">
                    <div class="feature-icon-compact bg-success">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h6 class="feature-title-compact">Chính hãng 100%</h6>
                    <p class="feature-desc-compact">Cam kết sản phẩm chính hãng</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-box-compact">
                    <div class="feature-icon-compact bg-warning">
                        <i class="bi bi-arrow-repeat"></i>
                    </div>
                    <h6 class="feature-title-compact">Đổi trả dễ dàng</h6>
                    <p class="feature-desc-compact">Đổi trả miễn phí trong 7 ngày</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="400">
                <div class="feature-box-compact">
                    <div class="feature-icon-compact bg-danger">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h6 class="feature-title-compact">Hỗ trợ 24/7</h6>
                    <p class="feature-desc-compact">Đội ngũ CSKH luôn sẵn sàng</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CUSTOM CSS - COMPACT VERSION -->
