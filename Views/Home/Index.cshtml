    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s ease;
}

.product-card-compact:hover .product-overlay-compact {
    opacity: 1;
}

.btn-view-product-compact {
    background: white;
    color: #2c3e50;
    padding: 10px 25px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
    transform: translateY(20px);
