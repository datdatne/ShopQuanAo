    background-image: url('https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=1600&h=900&fit=crop');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
}

.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.9) 0%, rgba(118, 75, 162, 0.9) 100%);
}

.hero-content {
    position: relative;
    z-index: 2;
    padding: 50px 0; /* Giảm từ 80px → 50px */
}

.hero-title-compact {
    font-size: 2.5rem; /* Giảm từ 3.5rem → 2.5rem */
    font-weight: 800;
    color: white;
    margin-bottom: 15px; /* Giảm từ 20px → 15px */
    line-height: 1.2;
}

.text-gradient {
    background: linear-gradient(to right, #ffd89b, #19547b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.hero-subtitle-compact {
    font-size: 1rem; /* Giảm từ 1.3rem → 1rem */
    color: rgba(255,255,255,0.9);
    margin-bottom: 20px; /* Giảm từ 30px → 20px */
}

.btn-hero-primary-compact {
    background: white;
    color: #667eea;
    border: 2px solid white;
    font-weight: 600; /* Giảm từ 700 → 600 */
    padding: 10px 30px; /* Giảm từ 15px 40px → 10px 30px */
    border-radius: 50px;
    transition: all 0.3s ease;
    font-size: 0.95rem;
}

.btn-hero-primary-compact:hover {
    background: transparent;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.3);
}

.btn-hero-outline-compact {
    background: transparent;
    color: white;
    border: 2px solid white;
    font-weight: 600;
    padding: 10px 30px;
    border-radius: 50px;
    transition: all 0.3s ease;
    font-size: 0.95rem;
}

.btn-hero-outline-compact:hover {
    background: white;
    color: #667eea;
    transform: translateY(-2px);
}

/* Trust Badges - COMPACT */
.trust-badges-compact {
    display: flex;
    gap: 20px; /* Giảm từ 30px → 20px */
    flex-wrap: wrap;
}

.badge-item-compact {
    display: flex;
    align-items: center;
    gap: 8px; /* Giảm từ 10px → 8px */
    color: white;
    font-size: 0.85rem; /* Giảm từ 0.95rem → 0.85rem */
}

.badge-item-compact i {
    font-size: 1.2rem; /* Giảm từ 1.5rem → 1.2rem */
}

/* Section Styles - COMPACT */
.section-title-compact {
    font-size: 2rem; /* Giảm từ 2.5rem → 2rem */
    font-weight: 800;
    color: #2c3e50;
    margin-bottom: 8px;
}

.section-subtitle-compact {
    font-size: 0.95rem; /* Giảm từ 1.1rem → 0.95rem */
    color: #7f8c8d;
}

/* Category Cards - COMPACT */
.category-card-compact {
    display: block;
    text-decoration: none;
    color: inherit;
}

.category-image-compact {
    position: relative;
    border-radius: 12px; /* Giảm từ 15px → 12px */
    overflow: hidden;
    height: 320px; /* Giảm từ 400px → 320px */
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.category-image-compact img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.category-overlay-compact {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px; /* Giảm từ 30px → 20px */
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white;
    transition: all 0.3s ease;
}

.category-name-compact {
