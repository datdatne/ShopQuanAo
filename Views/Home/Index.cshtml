    font-weight: 700;
    margin-bottom: 5px;
}

.category-desc-compact {
    font-size: 0.85rem; /* Giảm từ 0.9rem → 0.85rem */
    margin-bottom: 8px;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
}

.category-btn-compact {
    display: inline-block;
    background: white;
    color: #2c3e50;
    padding: 6px 18px; /* Giảm từ 8px 20px → 6px 18px */
    border-radius: 20px; /* Giảm từ 25px → 20px */
    font-weight: 600;
    font-size: 0.85rem;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
}

