@model IEnumerable<ShopQuanAo.Models.Product>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Sản phẩm</li>
    </ol>

    @if (ViewBag.CurrentCategory != null)
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center mb-3 shadow-sm">
            <span>
                <i class="bi bi-funnel-fill me-2"></i>
                Đang xem danh sách thuộc danh mục: <strong>@ViewBag.CurrentCategory</strong>
            </span>

            <a asp-controller="AdminCategories" asp-action="Index" class="btn btn-sm btn-light border fw-bold text-dark">
                <i class="bi bi-arrow-left me-1"></i> Quay lại
            </a>
        </div>
    }
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Thêm sản phẩm mới
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-table me-1"></i>
            Danh sách tất cả sản phẩm
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover table-striped align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th style="width: 50px;">ID</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Kho & Trạng thái</th>
                        <th>Danh mục</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold text-secondary">#@item.Id</td>
                            <td class="text-center" style="width: 100px;">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="img-thumbnail" style="max-height: 60px; max-width: 80px;" />
                                }
                                else
                                {
                                    <span class="text-muted small">No Image</span>
                                }
                            </td>
                            <td class="fw-bold">@item.Name</td>
                            <td class="text-end">@item.Price.ToString("N0") đ</td>
                            <td class="text-center">
                                @if (item.Stock > 0)
                                {
                                    if (item.Stock < 10)
                                    {
                                        <span class="badge bg-warning text-dark">Sắp hết (@item.Stock)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Còn hàng (@item.Stock)</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </td>
                            <td>@item.Category?.Name</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Xem chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                                       onclick="return confirm('Bạn chắc chắn muốn xóa sản phẩm này?');" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (ViewBag.LowStockProducts != null)
    {
        var list = (List<ShopQuanAo.Models.Product>)ViewBag.LowStockProducts;
        if (list.Any())
        {
            <div class="card border-danger mt-4 mb-4 shadow-sm">
                <div class="card-header bg-danger text-white fw-bold">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    CẢNH BÁO NHẬP KHO (@list.Count sản phẩm cần nhập gấp)
                </div>
                <div class="card-body bg-light">
                    <div class="row">
                        @foreach (var item in list)
                        {
                            <div class="col-md-4 mb-2">
                                <div class="alert alert-warning border-warning d-flex align-items-center justify-content-between py-2 mb-0 shadow-sm">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-box-seam me-2 fs-5"></i>
                                        <div>
                                            <strong>@item.Name</strong>
                                        </div>
                                    </div>
                                    <span class="badge bg-danger rounded-pill fs-6">Còn: @item.Stock</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>