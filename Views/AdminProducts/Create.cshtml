@model ShopQuanAo.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4">Thêm sản phẩm mới</h2>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Danh sách</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Thông tin sản phẩm
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert">
                                <h6 class="alert-heading fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Đã xảy ra lỗi:</h6>
                                <hr>
                                <div asp-validation-summary="All" class="mb-0"></div>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên sản phẩm</label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." required />
                            <span asp-validation-for="Name" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label fw-bold">Danh mục</label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label fw-bold">Số lượng kho</label>
                                <input asp-for="Stock" type="number" class="form-control" value="0" min="0" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold">Giá bán (VNĐ)</label>
                            <input asp-for="Price" type="number" class="form-control" placeholder="Nhập giá bán..." required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ảnh sản phẩm</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-lg"></i> Lưu sản phẩm
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>