@model ShopQuanAo.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index">Danh sách</a>
                </li>
                <li class="breadcrumb-item active">Thêm mới</li>
            </ol>
        </nav>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-plus-circle me-2"></i> Thêm sản phẩm mới
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Tên sản phẩm -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">
                            Tên sản phẩm <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Danh mục & Số lượng -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">
                                Danh mục <span class="text-danger">*</span>
                            </label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Stock" class="form-label fw-bold">
                                Số lượng kho <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Stock" type="number" class="form-control" value="0" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Giá bán -->
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label fw-bold">
                            Giá bán (VNĐ) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Price" type="number" class="form-control" placeholder="Nhập giá bán..." />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Mô tả -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">
                            Mô tả sản phẩm
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4"
                                  placeholder="Nhập mô tả chi tiết..."></textarea>
                    </div>

                    <!-- Size & Material -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Size" class="form-label fw-bold">
                                Kích cỡ (Size)
                            </label>
                            <input asp-for="Size" class="form-control" placeholder="VD: S, M, L, XL..." />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Material" class="form-label fw-bold">
                                Chất liệu
                            </label>
                            <input asp-for="Material" class="form-control" placeholder="VD: Cotton, Kaki..." />
                        </div>
                    </div>

                    <!-- URL ảnh -->
                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label fw-bold">
                            URL ảnh sản phẩm
                        </label>
                        <input asp-for="ImageUrl" class="form-control"
                               placeholder="VD: https://images.unsplash.com/photo-xxx?w=500" />
                        <small class="text-muted">
                            Nhập link ảnh từ Unsplash, Google Images, hoặc để trống
                        </small>

                        <!-- Preview ảnh -->
                        <div id="imagePreview" class="mt-3" style="display: none;">
                            <img id="preview" src="#" alt="Preview" class="img-thumbnail" style="max-width: 300px;" />
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-2"></i> Lưu sản phẩm
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Preview ảnh khi nhập URL
        document.querySelector('input[name="ImageUrl"]').addEventListener('input', function(e) {
            const url = e.target.value;
            const preview = document.getElementById('preview');
            const previewDiv = document.getElementById('imagePreview');

            if (url && (url.startsWith('http://') || url.startsWith('https://'))) {
                preview.src = url;
                previewDiv.style.display = 'block';

                // Xử lý lỗi load ảnh
                preview.onerror = function() {
                    previewDiv.style.display = 'none';
                };
            } else {
                previewDiv.style.display = 'none';
            }
        });
    </script>
}
