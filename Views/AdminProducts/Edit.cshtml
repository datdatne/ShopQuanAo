@model ShopQuanAo.Models.Product
@{
    ViewData["Title"] = "Sửa sản phẩm"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4">Chỉnh sửa Sản phẩm</h2>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Danh sách</a></li>
        <li class="breadcrumb-item active">Sửa</li>
    </ol>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-warning text-dark fw-bold">
            <i class="bi bi-pencil-square"></i> Thông tin sản phẩm
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger"><div asp-validation-summary="All" class="mb-0"></div></div>
                }

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên sản phẩm</label>
                            <input asp-for="Name" class="form-control" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-bold">Giá bán</label>
                                <input asp-for="Price" class="form-control" type="number" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label fw-bold">Tồn kho</label>
                                <input asp-for="Stock" class="form-control" type="number" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Size" class="form-label fw-bold">Kích cỡ (Size)</label>
                                <input asp-for="Size" class="form-control" placeholder="VD: S, M, L, XL" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Material" class="form-label fw-bold">Chất liệu</label>
                                <input asp-for="Material" class="form-control" placeholder="VD: Cotton 100%" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">Danh mục</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả chi tiết</label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Nhập mô tả sản phẩm..."></textarea>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-bold">Ảnh hiện tại</label>
                        <div class="mb-3 text-center border p-2 bg-light rounded">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid" />
                            }
                            else
                            {

                                <span class="text-muted">Chưa có ảnh</span>
                            }
                        </div>
                        <label class="form-label fw-bold">Chọn ảnh mới</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    </div>
                </div>

                <div class="mt-3 pt-3 border-top">
                    <button type="submit" class="btn btn-primary px-4"><i class="bi bi-save"></i> Lưu thay đổi</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>