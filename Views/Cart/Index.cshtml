@model List<ShopQuanAo.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}

<!-- BREADCRUMB -->
<div class="bg-light py-3 mb-4">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item active">Giỏ hàng</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <!-- PAGE TITLE -->
    <div class="text-center mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-cart-check me-2" style="color: #667eea;"></i>
            Giỏ hàng của bạn
        </h2>
        @if (Model.Count > 0)
        {
            <p class="text-muted">Bạn có <strong class="text-primary">@ViewBag.TotalItems</strong> sản phẩm trong giỏ hàng</p>
        }
    </div>

    <!-- MESSAGES -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- EMPTY CART -->
    @if (Model.Count == 0)
    {
        <div class="text-center py-5">
            <div class="empty-cart-icon mb-4">
                <i class="bi bi-cart-x" style="font-size: 6rem; color: #e0e0e0;"></i>
            </div>
            <h4 class="mb-3">Giỏ hàng trống!</h4>
            <p class="text-muted mb-4">Bạn chưa thêm sản phẩm nào vào giỏ hàng.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg px-5">
                <i class="bi bi-bag me-2"></i> Mua sắm ngay
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <!-- CART ITEMS -->
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-list-ul me-2"></i> Sản phẩm đã chọn
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 100px;" class="text-center">Hình ảnh</th>
                                        <th>Sản phẩm</th>
                                        <th style="width: 130px;" class="text-center">Đơn giá</th>
                                        <th style="width: 150px;" class="text-center">Số lượng</th>
                                        <th style="width: 130px;" class="text-center">Thành tiền</th>
                                        <th style="width: 80px;" class="text-center">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="cart-item">
                                            <!-- Image -->
                                            <td class="text-center">
                                                <div class="cart-item-image">
                                                    <img src="@item.ImageUrl" alt="@item.ProductName"
                                                         class="rounded shadow-sm"
                                                         style="width: 70px; height: 70px; object-fit: cover;">
                                                </div>
                                            </td>

                                            <!-- Product Name -->
                                            <td>
                                                <div class="fw-bold text-dark">@item.ProductName</div>
                                                <small class="text-muted">Mã SP: #@item.ProductId</small>
                                            </td>

                                            <!-- Price -->
                                            <td class="text-center">
                                                <span class="text-danger fw-bold">@item.Price.ToString("N0") đ</span>
                                            </td>

                                            <!-- Quantity -->
                                            <td>
                                                <form asp-action="Update" method="post" class="d-flex justify-content-center">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <div class="input-group input-group-sm" style="max-width: 130px;">
                                                        <button type="submit" name="quantity" value="@(item.Quantity - 1)"
                                                                class="btn btn-outline-secondary">
                                                            <i class="bi bi-dash"></i>
                                                        </button>
                                                        <input type="number" name="quantity" value="@item.Quantity"
                                                               class="form-control text-center fw-bold" min="1" readonly
                                                               style="max-width: 50px;" />
                                                        <button type="submit" name="quantity" value="@(item.Quantity + 1)"
                                                                class="btn btn-outline-secondary">
                                                            <i class="bi bi-plus"></i>
                                                        </button>
                                                    </div>
                                                </form>
                                            </td>

                                            <!-- Subtotal -->
                                            <td class="text-center">
                                                <strong class="text-primary fs-6">@((item.Price * item.Quantity).ToString("N0")) đ</strong>
                                            </td>

                                            <!-- Remove -->
                                            <td class="text-center">
                                                <form asp-action="Remove" method="post" class="d-inline">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')"
                                                            title="Xóa">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top py-3">
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i> Tiếp tục mua sắm
                            </a>
                            <form asp-action="Clear" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger"
                                        onclick="return confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?')">
                                    <i class="bi bi-trash me-2"></i> Xóa giỏ hàng
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ORDER SUMMARY -->
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 sticky-top" style="top: 20px;">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-receipt me-2"></i> Tóm tắt đơn hàng
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Summary Items -->
                        <div class="summary-item d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span class="text-muted">Tổng sản phẩm:</span>
                            <strong class="text-dark">@ViewBag.TotalItems</strong>
                        </div>

                        <div class="summary-item d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span class="text-muted">Tạm tính:</span>
                            <strong class="text-dark">@ViewBag.TotalAmount.ToString("N0") đ</strong>
                        </div>

                        <div class="summary-item d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span class="text-muted">Phí vận chuyển:</span>
                            <strong class="text-success">Miễn phí</strong>
                        </div>

                        <div class="summary-item d-flex justify-content-between mb-4">
                            <h5 class="mb-0">Tổng cộng:</h5>
                            <h5 class="mb-0 text-danger">@ViewBag.TotalAmount.ToString("N0") đ</h5>
                        </div>

                        <!-- Checkout Button -->
                        <div class="d-grid gap-2">
                            <a asp-controller="Order" asp-action="Checkout" class="btn btn-success btn-lg">
                                <i class="bi bi-credit-card me-2"></i> Thanh toán
                            </a>
                        </div>

                        <!-- Info Box -->
                        <div class="alert alert-info mt-3 mb-0">
                            <small>
                                <i class="bi bi-info-circle me-1"></i>
                                <strong>Lưu ý:</strong> Giá đã bao gồm VAT
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Payment Methods -->
                <div class="card shadow-sm border-0 mt-3">
                    <div class="card-body text-center">
                        <h6 class="text-muted mb-3">Phương thức thanh toán</h6>
                        <div class="d-flex justify-content-around align-items-center">
                            <i class="bi bi-cash-coin fs-2 text-success" title="COD"></i>
                            <i class="bi bi-credit-card fs-2 text-primary" title="ATM"></i>
                            <i class="bi bi-wallet2 fs-2 text-warning" title="Ví điện tử"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- CUSTOM CSS -->
<style>
    /* Page Animations */
    .cart-item {
        transition: all 0.3s ease;
    }

        .cart-item:hover {
            background-color: #f8f9fa;
            transform: scale(1.01);
        }

    .cart-item-image img {
        transition: transform 0.3s ease;
    }

    .cart-item:hover .cart-item-image img {
        transform: scale(1.1);
    }

    /* Empty Cart Animation */
    .empty-cart-icon {
        animation: swing 2s ease-in-out infinite;
    }

     swing {
        0%, 100%

    {
        transform: rotate(0deg);
    }

    25% {
        transform: rotate(-10deg);
    }

    75% {
        transform: rotate(10deg);
    }

    }

    /* Summary Items */
    .summary-item {
        font-size: 0.95rem;
    }

    /* Buttons */
    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        }

    /* Card Shadows */
    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        border-radius: 0 !important;
    }

    /* Input Group */
    .input-group .btn {
        border-color: #dee2e6;
    }

        .input-group .btn:hover {
            background-color: #667eea;
            border-color: #667eea;
            color: white;
        }

    /* Payment Icons Animation */
    .card-body i {
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .card-body i:hover {
            transform: scale(1.2);
        }

    /* Responsive */
     (max-width: 768px) {
        .table

    {
        font-size: 0.85rem;
    }

    .cart-item-image img {
        width: 50px !important;
        height: 50px !important;
    }

    }
</style>
